{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"module": "CommonJS",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es6",
	    "rootDir": "./src"
	},
	"include": ["src"],
	"typedocOptions": {
		"excludeExternals": true,
		"excludeNotExported": true,
		"excludePrivate": true,
		"includeDeclarations": false,
		"mode": "file",
		"out": "./docs",
		"readme": "./readme.md",
		"stripInternal": true,
		"theme": "minimal",
		"tsconfig": "./tsconfig.json"
	}
}
